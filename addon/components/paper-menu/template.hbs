<BasicDropdown
  @triggerComponent="paper-menu/trigger"
  @contentComponent="paper-menu/content"
  @calculatePosition={{this.calculatePosition}}
  @onClose={{this.close}}
  @onOpen={{this.open}} as |dd|
>
  {{
    yield
    (hash trigger=dd.Trigger content=dd.Content)
    (hash open=this.open close=this.close)
  }}
</BasicDropdown>